{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Server",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceRoot}",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "debug"]
    },
    {
      "name": "Client",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:5000",
      "webRoot": "${workspaceRoot}/dist/debug"
    }
  ],
  "compounds": [
    {
      "name": "Debug",
      "configurations": ["Server", "Client"],
      "stopAll": true,
      "preLaunchTask": "npm: build"
    }
  ]
}
